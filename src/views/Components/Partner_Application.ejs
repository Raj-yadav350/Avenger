<%- include('Connections/Header') -%>
    <%- include('Connections/Navbar') -%>
        <!-- ======= Hero Section ======= -->
        <section id="hero" style="background: url(../img/A.webp) center center no-repeat; background-size: contain;">
            <div class="hero-container" data-aos="zoom-in" data-aos-delay="100">
                <h1>Welcome
                    <%= username %> <br /> to Avengers Assemble <br />PartnerShip Application
                </h1>
                <a href="#application" class="scrollto btn-grad">Get Started</a>
            </div>
        </section>
        <!-- End Hero Section -->
        <section id="application" style="background-color: lavender;">
            <div class="container mt-2">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-8">
                        <div class="form">
                            <% if(typeof alert != 'undefined') { %>
                                <% alert.forEach(function(error) { %>
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        <%= error.msg %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                    <% }) %>
                                        <% } %>
                                            <hr />
                                            <h2>Avengers Assemble PartnerShip Application</h2>
                                            <form action="/partner/application" method="POST">
                                                <hr />
                                                <div class="row g-2 mb-3">
                                                    <div class="col-md">
                                                        <div class="form-floating">
                                                            <input type="text" class="form-control" name="UserName" id="floatingInputGrid" placeholder="UserName" value="<%= username %>" readonly>
                                                            <label for="floatingInputGrid">Discord Username</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md">
                                                        <div class="form-floating">
                                                            <input type="number" class="form-control" name="DiscordId" id="floatingInputGrid" placeholder="DiscordId" value="<%= discordId %>" readonly>
                                                            <label for="floatingInputGrid">Discord ID</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <input type="email" class="form-control" name="Email" id="floatingInput" placeholder="Email" value="<%= email %>" readonly>
                                                    <label for="floatingInput">Email address</label>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="Name" id="floatingInput" placeholder="Name" required />
                                                    <label for="floatingInput">Your Orignal Name</label>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="GuildId" id="floatingInput" placeholder="GuildId" required />
                                                    <label for="floatingInput">Guild ID</label>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="Description" id="floatingInput" placeholder="Description" required />
                                                    <label for="floatingInput">Short Description(Max 140)</label>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <textarea class="form-control" name="AboutGuild" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 200px" required></textarea>
                                                    <label for="floatingTextarea2">Long Description(Only HTML)</label>
                                                </div>
                                                <div class="input-group mb-3">
                                                    <label>Permanent Server Invite Link</label>
                                                </div>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text" id="basic-addon3">https://discord.gg/</span>
                                                    <input type="text" class="form-control" name="InviteLink" id="basic-url" aria-describedby="basic-addon3" required />
                                                </div>
                                                <div class="input-group mb-3">
                                                    <label>Vanity URL</label>
                                                </div>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text" id="basic-addon3">https://serinvite.tk/</span>
                                                    <input type="text" class="form-control" name="VanityURL" id="basic-url" aria-describedby="basic-addon3" required />
                                                </div>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" name="IsOwner" id="flexSwitchCheckChecked" value="Yes" />
                                                    <label class="form-check-label" for="flexSwitchCheckChecked">Are you Owner of this server?</label>
                                                </div>
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" name="TermsAndConditions" type="checkbox" value="Accepted" id="flexCheckChecked" required />
                                                    <label class="form-check-label" for="flexCheckChecked">
														I Read and Accept the Terms And Guidelines of discord <a href="https://discord.com/new/guidelines">Guidelines</a> & <a href="https://discord.com/new/terms">Terms</a>
													</label>
                                                </div>
                                                <section id="apply">
                                                    <button class="btn btn-info" type="submit">Submit</button>
                                                </section>
                                                <hr />
                                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('Connections/Footer') -%>